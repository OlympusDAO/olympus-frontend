  "devdoc": {
    "kind": "dev",
    "methods": {
      "approve(address,uint256)": {
        "params": {
          "loanID": "index of loan in loans[]",
          "to": "address to approve"
        }
      },
      "claimRepaid(uint256)": {
        "params": {
          "loanID": "index of loan in loans[]"
        }
      },
      "clear(uint256,bool)": {
        "params": {
          "repayDirect": "lender should input false if concerned about debt token blacklisting",
          "reqID": "index of request in requests[]"
        },
        "returns": {
          "loanID": "index of loan in loans[]"
        }
      },
      "collateralFor(uint256,uint256)": {
        "params": {
          "amount": "of collateral tokens",
          "loanToCollateral": "ratio for loan"
        }
      },
      "defaulted(uint256)": {
        "params": {
          "loanID": "index of loan in loans[]"
        },
        "returns": {
          "_0": "uint256 collateral amount"
        }
      },
      "delegate(address)": {
        "params": {
          "to": "address to delegate"
        }
      },
      "interestFor(uint256,uint256,uint256)": {
        "params": {
          "amount": "of debt tokens",
          "duration": "of loan in seconds",
          "rate": "of interest (annualized)"
        },
        "returns": {
          "_0": "interest as a number of debt tokens"
        }
      },
      "isActive(uint256)": {
        "params": {
          "reqID": "index of request in requests[]"
        },
        "returns": {
          "_0": "active status"
        }
      },
      "isDefaulted(uint256)": {
        "params": {
          "loanID": "index of loan in loans[]"
        },
        "returns": {
          "_0": "defaulted status"
        }
      },
      "newCollateralFor(uint256)": {
        "params": {
          "loanID": "of loan to roll"
        }
      },
      "provideNewTermsForRoll(uint256,uint256,uint256,uint256)": {
        "params": {
          "duration": "of loan tenure in seconds",
          "interest": "to pay (annualized % of 'amount')",
          "loanID": "index of loan in loans[]",
          "loanToCollateral": "debt tokens per collateral token pledged"
        }
      },
      "repay(uint256,uint256)": {
        "params": {
          "loanID": "index of loan in loans[]",
          "repaid": "debt tokens to repay"
        }
      },
      "request(uint256,uint256,uint256,uint256)": {
        "params": {
          "amount": "of debt tokens to borrow",
          "duration": "of loan tenure in seconds",
          "interest": "to pay (annualized % of 'amount')",
          "loanToCollateral": "debt tokens per collateral token pledged",
          "reqID": "index of request in requests[]"
        }
      },
      "rescind(uint256)": {
        "params": {
          "reqID": "index of request in requests[]"
        }
      },
      "roll(uint256)": {
        "params": {
          "loanID": "index of loan in loans[]"
        }
      },
      "toggleDirect(uint256)": {
        "params": {
          "loanID": "of lender's loan"
        }
      },
      "transfer(uint256)": {
        "params": {
          "loanID": "index of loan in loans[]"
        }
      }
    },
    "version": 1
  },
  "userdoc": {
    "kind": "user",
    "methods": {
      "approve(address,uint256)": {
        "notice": "approve transfer of loan ownership to new address"
      },
      "claimRepaid(uint256)": {
        "notice": "claim debt tokens for lender if repayDirect was false"
      },
      "clear(uint256,bool)": {
        "notice": "fill a requested loan as a lender"
      },
      "collateralFor(uint256,uint256)": {
        "notice": "compute collateral needed for loan amount at given loan to collateral ratio"
      },
      "defaulted(uint256)": {
        "notice": "send collateral to lender upon default"
      },
      "delegate(address)": {
        "notice": "delegate voting power on collateral"
      },
      "interestFor(uint256,uint256,uint256)": {
        "notice": "compute interest cost on amount for duration at given annualized rate"
      },
      "isActive(uint256)": {
        "notice": "check if given request is active"
      },
      "isDefaulted(uint256)": {
        "notice": "check if given loan is in default"
      },
      "newCollateralFor(uint256)": {
        "notice": "compute collateral needed to roll loan"
      },
      "provideNewTermsForRoll(uint256,uint256,uint256,uint256)": {
        "notice": "provide terms for loan to roll over"
      },
      "repay(uint256,uint256)": {
        "notice": "repay a loan to recoup collateral"
      },
      "request(uint256,uint256,uint256,uint256)": {
        "notice": "request a loan with given parameterscollateral is taken at time of request"
      },
      "rescind(uint256)": {
        "notice": "cancel a loan request and return collateral"
      },
      "roll(uint256)": {
        "notice": "roll a loan overuses terms from request"
      },
      "toggleDirect(uint256)": {
        "notice": "turn direct repayment off or on"
      },
      "transfer(uint256)": {
        "notice": "execute approved transfer of loan ownership"
      }
    },
    "notice": "A Cooler is a smart contract escrow that facilitates fixed-duration loans         for a specific user and debt-collateral pair.",
    "version": 1
  }
}
